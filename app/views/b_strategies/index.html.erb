<p id="notice"><%= notice %></p>

<h1>Listing B Strategies</h1>

<table>
  <thead>
    <tr>
      <th>Max price</th>
      <th>Target price</th>
      <th>First price</th>
      <th>Max down payment</th>
      <th>Interest rate</th>
      <th>Loan points</th>
      <th>Term limit</th>
      <th>Payment</th>
      <th>Cash flow</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @b_strategies.each do |b_strategy| %>
      <tr>
        <td><%= b_strategy.max_price %></td>
        <td><%= b_strategy.target_price %></td>
        <td><%= b_strategy.first_price %></td>
        <td><%= b_strategy.max_down_payment %></td>
        <td><%= b_strategy.interest_rate %></td>
        <td><%= b_strategy.loan_points %></td>
        <td><%= b_strategy.term_limit %></td>
        <td><%= b_strategy.payment %></td>
        <td><%= b_strategy.cash_flow %></td>
        <td><%= b_strategy.comments %></td>
        <td><%= link_to 'Show', b_strategy %></td>
        <td><%= link_to 'Edit', edit_b_strategy_path(b_strategy) %></td>
        <td><%= link_to 'Destroy', b_strategy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


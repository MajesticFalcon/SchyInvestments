<%= form_for(@prospect) do |f| %>
  <% if @prospect.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prospect.errors.count, "error") %> prohibited this prospect from being saved:</h2>

      <ul>
      <% @prospect.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% debug(@prospect) %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :street_num %><br>
    <%= f.number_field :street_num %>
  </div>
  <div class="field">
    <%= f.label :street_name %><br>
    <%= f.text_field :street_name %>
  </div>
  <div class="field">
    <%= f.label :street_ord %><br>
    <%= f.text_field :street_ord %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.number_field :zip %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :purchase_price %><br>
    <%= f.number_field :purchase_price %>
  </div>
  <div class="field">
    <%= f.label :repair_cost %><br>
    <%= f.number_field :repair_cost %>
  </div>
  <div class="field">
    <%= f.label :gross_rent %><br>
    <%= f.number_field :gross_rent %>
  </div>
  <div>
    <%= f.label :investor %><br />
    <%= f.collection_select :investor_id, Investor.all, :id, :first_name, :prompt => "Select an investor" %>
  </div>
  <div>
    <%= f.label :motivation %><br />
    <%= f.collection_select :motivation_id, Motivation.all, :id, :name, :prompt => "Select a motivation" %>
  </div>
  <div>
	<h4>Landlord surveys<h4>
		<ul><% LSurvey.joins(:prospect).each do |survey| %>
			<li><%= link_to survey.address, edit_l_survey_path %></li>
		<% end %></ul>
		<%= link_to "Link a survey", l_surveys_path %>
  </div>
  <div>
	<h4>Comparible houses<h4>
		<ul><% @prospect.comps.each do |comp| %>
			<li><%= link_to comp.address, edit_comp_path %></li>
		<% end %></ul>
		<%= link_to "Link a comp", comp_path %>
  </div>
  
  <div>
    <%= f.label :buying_strategy %><br />
    <% if !@prospect.b_strategy.nil? %>
	<%= link_to "Edit buying strategy", edit_b_strategy_path(@prospect.b_strategy) %>
	<% else %>
	<%= link_to "Create buying strategy", new_b_strategy_path %>
	<% end %>
  <h4>Expenses</h4>
  <div>
    <%= f.fields_for :expenses do |expense| %>
      <%= render 'expense_fields', :f => expense %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add expense', f, :expenses %>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
